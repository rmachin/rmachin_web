// Footer
footer.text-center
	.footer-above
		.container
			.row
				.footer-col.col-md-3
					h3 Location
					p
						| {{ site.address_street }}
						br
						| {{ site.address_city }}, {{ site.address_state }} {{ site.address_zip }}
				.footer-col.col-md-3
					h3 Connect with me
					ul.list-inline
						| {% if site.facebook_username %}
						li
							a.btn-social.btn-outline(href='https://www.facebook.com/{{ site.facebook_username }}')
								i.fa.fa-fw.fa-facebook
						|                         {% endif %}
						|                         {% if site.twitter_username %}
						li
							a.btn-social.btn-outline(href='https://twitter.com/{{ site.twitter_username }}')
								i.fa.fa-fw.fa-twitter
						|                         {% endif %}
						|                         {% if site.github_username %}
						li
							a.btn-social.btn-outline(href='https://github.com/{{ site.github_username }}')
								i.fa.fa-fw.fa-github
						|                         {% endif %}
						|                         {% if site.instagram_username %}
						li
							a.btn-social.btn-outline(href='https://www.instagram.com/{{ site.instagram_username }}')
								i.fa.fa-fw.fa-instagram
						|                         {% endif %}
						|                         {% if site.stackoverflow_url %}
						li
							a.btn-social.btn-outline(href='{{ site.stackoverflow_url }}')
								i.fa.fa-fw.fa-stack-overflow
						|                         {% endif %}
						|                         {% if site.googleplus_username %}
						li
							a.btn-social.btn-outline(href='https://plus.google.com/+{{ site.googleplus_username }}')
								i.fa.fa-fw.fa-google-plus
						|                         {% endif %}
						|                         {% if site.skype_username %}
						li
							a.btn-social.btn-outline(href='skype:{{ site.skype_username }}?call')
								i.fa.fa-fw.fa-skype
						|                         {% endif %}
						|                         {% if site.linkedin_url %}
						li
							a.btn-social.btn-outline(href='{{ site.linkedin_url }}')
								i.fa.fa-fw.fa-linkedin
						|                         {% endif %}
				.footer-col.col-md-6
					h3 Always Learning...
					p
						|{% img my-son.png alt:'Hire Raphael Machin' id:'footer-lang' %}
	.footer-below
		.container
			.row
				.col-lg-12
					| Copyright Â© Raphael Machin {{ site.time | date: "%Y" }}
